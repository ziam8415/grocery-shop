model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  price       Float
  description String?

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  isDeleted Boolean @default(false)

  @@index([name])
  @@index([price])

  orderItems OrderItem[]
}