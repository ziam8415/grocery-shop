model Category {
  id        String     @id @default(uuid())
  name      String
  slug      String     @unique

  parentId  String?
  parent    Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryTree")

  products  Product[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

